/* pages/index/index.wxss */
.start-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 56rpx 32rpx 48rpx;
  color: #f3f5f7;
  background:
    radial-gradient(1200rpx 560rpx at 10% 5%, rgba(18, 113, 255, 0.22), transparent 70%),
    radial-gradient(900rpx 460rpx at 90% 0%, rgba(7, 193, 96, 0.2), transparent 65%),
    #0b0f14;
}

.hero {
  margin-top: 38rpx;
}

.hero-title {
  display: block;
  font-size: 62rpx;
  line-height: 1.08;
  font-weight: 900;
  letter-spacing: 1rpx;
}

.hero-subtitle {
  display: block;
  margin-top: 14rpx;
  font-size: 26rpx;
  opacity: 0.78;
}

.profile-card {
  margin-top: 30rpx;
  padding: 18rpx 20rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.12);
  background: rgba(255, 255, 255, 0.06);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-btn {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.avatar-btn::after {
  border: none;
}

.profile-avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.1);
}

.avatar-tip {
  font-size: 20rpx;
  opacity: 0.72;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.nickname-input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 14rpx;
  box-sizing: border-box;
  padding: 0 14rpx;
  border: 1px solid rgba(255, 255, 255, 0.25);
  background: rgba(0, 0, 0, 0.22);
  color: #fff;
  font-size: 26rpx;
}

.profile-tip {
  font-size: 22rpx;
  opacity: 0.72;
}

.actions {
  margin-top: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.action-btn {
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.action-btn::after {
  border: none;
}

.action-primary {
  color: #ffffff;
  background: linear-gradient(90deg, #1397ff, #0d7afe);
}

.action-secondary {
  color: #d8fbe8;
  background: rgba(7, 193, 96, 0.18);
  border: 1px solid rgba(7, 193, 96, 0.4);
}

.join-by-code {
  margin-top: 24rpx;
  display: flex;
  gap: 10rpx;
}

.room-input {
  flex: 1;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 14rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.22);
  background: rgba(0, 0, 0, 0.22);
  color: #fff;
  font-size: 26rpx;
}

.join-btn {
  width: 220rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 14rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #111;
  background: #d4e0ff;
}

.join-btn::after {
  border: none;
}

.bottom-tip {
  display: block;
  margin-top: 20rpx;
  font-size: 22rpx;
  opacity: 0.62;
}
